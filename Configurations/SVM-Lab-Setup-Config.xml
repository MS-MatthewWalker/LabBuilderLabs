<?xml version="1.0" encoding="utf-8"?>
<labbuilderconfig name="SVM-Config" version="1.0">
  <description>Lab Buildout for Windows Server 2016 Domain Controller </description>
  <settings domainname="Contoso.COM" vhdparentpath=".\Virtual Hard Disk Templates" dsclibrarypath=".\LabDSCResources" resourcepath=".\Resources" LabId="Lab3_" modulepath=".\Modules" />
  <resources>
    <msu name="AMD64-all-windows10.0-kb4010672-x64_e12a6da8744518197757d978764b6275f9508692.msu" url="ResFolder/AMD64-all-windows10.0-kb4010672-x64_e12a6da8744518197757d978764b6275f9508692.msu" />
  </resources>
  <switches>
    <switch name="Public" type="Private" />
  </switches>
  <templatevhds isopath="ISOFiles" vhdpath="VHDFiles" prefix="Template-">
    <templatevhd name="Windows Server 2016 Datacenter FULL" iso="14393.0.160715-1616.RS1_RELEASE_SERVER_EVAL_X64FRE_EN-US.ISO" url="https://www.microsoft.com/en-us/evalcenter/evaluate-windows-server-2016" vhd="Windows Server 2016 Datacenter Full.vhdx" Edition="Windows Server 2016 SERVERDATACENTER" OSType="Server" packages="AMD64-all-windows10.0-kb4010672-x64_e12a6da8744518197757d978764b6275f9508692.msu" features="" VHDFormat="VHDx" VHDType="Dynamic" Generation="2" vhdsize="40GB" />
    <templatevhd name="Nano Server 2016" iso="14393.0.160715-1616.RS1_RELEASE_SERVER_EVAL_X64FRE_EN-US.ISO" url="https://www.microsoft.com/en-us/evalcenter/evaluate-windows-server-2016" vhd="Nano Server 2016.vhdx" edition="Windows Server 2016 SERVERDATACENTERNANO" ostype="Nano" packages="Microsoft-NanoServer-Guest-Package.cab,Microsoft-NanoServer-Defender-Package.cab,Microsoft-NanoServer-DSC-Package.cab,AMD64-all-windows10.0-kb4010672-x64_e12a6da8744518197757d978764b6275f9508692.msu" vhdformat="VHDx" vhdtype="Dynamic" generation="2" vhdsize="25GB" />
  </templatevhds>
  <templates>
    <template name="Windows Server 2016 Datacenter FULL" vhd="Windows Server 2016 Datacenter Full.vhdx" sourcevhd=".\VHDFiles\Template-Windows Server 2016 Datacenter Full.vhdx" memorystartupbytes="1GB" processorcount="1" generation="2" version="8.0" administratorpassword="Password1" timezone="Pacific Standard Time" ostype="Server" />
  </templates>
  <vms>
    <vm name="SHVMS1" template="Windows Server 2016 Datacenter FULL" computername="Lab3_SHVMS1" usedifferencingbootdisk="Y" ExposeVirtualizationExtensions="Y" processorcount="4" memorystartupbytes="8GB" DynamicMemoryEnabled="N" LCMSetting="ApplyOnly" EnableTPM="Y">
      <dsc configname="LAB_MEMBER_Server" configfile="LAB_MEMBER_Server.DSC.ps1">
        <parameters>
          DomainName = "Contoso.COM"
          DomainAdminPassword = "Password1"
          PSDscAllowDomainUser = $True
          
          Disks = @(
          @{ Name = 'VMDrive';
          Number = '1';
          DriveLetter = 'E';
          FSLabel = 'VMDrive';          
          }
          )

          
        </parameters>
      </dsc>
      <adapters>
        <adapter name="Public" switchname="Public" MACAddressSpoofing="On">
          <ipv4 address="192.168.100.1" defaultgateway="192.168.100.255" PrefixLength="24" dnsserver="192.168.100.2" />
        </adapter>
      </adapters>
      <DataVHDs>
        <DataVHD VHD="VMDrive.VHDX" Size="60GB" Type="Dynamic" />
      </DataVHDs>
    </vm>
    <vm name="SHVMS3" template="Windows Server 2016 Datacenter FULL" computername="Lab3_SHVMS3" usedifferencingbootdisk="Y" ExposeVirtualizationExtensions="N" processorCount="4" memorystartupbytes="2GB" DynamicMemoryEnabled="N" LCMSetting="ApplyAndAutoCorrect">
      <dsc configname="LAB_MEMBER_HGS" configfile="LAB_MEMBER_HGS.DSC.ps1">
        <parameters>
          DomainName = "Contoso.COM"
          DomainAdminPassword = "Password1"
          PSDscAllowDomainUser = $True
        </parameters>
      </dsc>
      <adapters>
        <adapter name="Public" switchname="Public" MACAddressSpoofing="On">
          <ipv4 address="192.168.0.3" defaultgateway="192.168.100.255" PrefixLength="24" dnsserver="192.168.100.2" />
        </adapter>
      </adapters>
    </vm>
  </vms>
</labbuilderconfig>